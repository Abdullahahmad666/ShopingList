<resources>
    <!-- AppCompat Theme for the entire app -->
    <style name="Theme.ShopingList" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- You can customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.ShopingList.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Full-screen background for splash screen -->
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>
</resources>
